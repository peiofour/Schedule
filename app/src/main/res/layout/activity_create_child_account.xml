<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateChildAccount"
    android:orientation="vertical">
  <TextView
      android:text="Création de compte"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/createAccountTxtChild"
      android:textSize="30sp"
      android:textStyle="bold"/>

  <TextView
      android:text="Informations manquantes"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/missInfoTxtChild"
      android:visibility="gone"
      android:textColor="#FF0000"
      android:textSize="24sp"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/nameChild"
      android:hint="Nom"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/surnameChild"
      android:hint="Prénom"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textEmailAddress"
      android:ems="10"
      android:id="@+id/emailChild"
      android:hint="Email"/>

  <TextView
      android:text="Email incorrect"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/badMailTxtChild"
      android:textSize="18sp"
      android:textColor="#FF0101"
      android:visibility="gone"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="phone"
      android:ems="10"
      android:id="@+id/phoneChild"
      android:hint="Téléphone"/>

  <TextView
      android:text="Numéro de téléphone incorrect"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/badPhoneTxtChild"
      android:textColor="#FA0000"
      android:textSize="18sp"
      android:visibility="gone"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPassword"
      android:ems="10"
      android:id="@+id/passwordChild"
      android:hint="Mot de passe"/>

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="textPassword"
      android:ems="10"
      android:id="@+id/passwordBisChild"
      android:hint="Réécrivez le mot de passe"/>

  <TextView
      android:text="Réécrivez correctement le mot de passe"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/badPasswordTxtChild"
      android:textSize="18sp"
      android:textColor="#FF0000"
      android:visibility="gone"/>

  <TextView
      android:text="Compte mail déjà utilisé"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/mailUsedTxtChild"
      android:textColor="#F60101"
      tools:textSize="24sp"
      android:visibility="gone"/>

  <Button
      android:text="Créer le compte"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/createAccountBtnChild"/>

</LinearLayout>